---
import { IoLogoGithub } from "react-icons/io5/index";
import Drawer from "./Drawer";
import HeaderLink from "./HeaderLink.astro";
---

<header class="fixed z-10 w-full">
    <nav class="flex justify-between items-center max-w-4xl mx-auto p-2 backdrop-blur-md">
        <div class="px-2 pb-1 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 bg-white dark:bg-blackish bg-opacity-20">
            <a href="/">
                <h1 class="text-4xl font-bold font-['M_Plus_Rounded_1c']">rm.</h1>
            </a>
        </div>
        <div class="hidden md:block">
            <ul class="flex flex-row items-center space-x-5 font-semibold">
                <li class="hover:underline">
                    <HeaderLink href='/blog'>Blog</HeaderLink>
                </li>
                <li class="hover:underline">
                    <HeaderLink href="/contact">Contact</HeaderLink>
                </li>
                <li class="hover:underline">
                    <a 
                        href="https://github.com/rubenmate" 
                        target="_blank" 
                        class="flex items-center space-x-1 p-[.35rem] bg-white dark:bg-blackish bg-opacity-20 rounded-md">
                        <IoLogoGithub/>
                        <span>GitHub</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="md:hidden flex flex-row space-x-2">
            <div>
                <Drawer client:load/>
            </div>
        </div>
    </nav>
</header>
<div class="h-16" />
