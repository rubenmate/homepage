---
import { AiTwotoneMail } from "react-icons/ai/index"
import Heading from "../components/Heading.astro";
import Layout from "../layouts/Layout.astro";
---
<Layout title="ruben-mate">
    <div class="h-1" />
    <section class="flex flex-col">
        <Heading title="Contact" />
        <div class="flex flex-col md:flex-row items-center justify-center mt-8 md:mt-0 text-lg">
            You can reach me at&nbsp;
            <a
                href='mailto:contacto@rubenmate.com'
                class="flex flex-row items-center font-bold text-lg text-primaryLight hover:bg-primaryLight 
                p-2 hover:bg-opacity-10 hover:rounded-md"
            >
                <span class="mr-2">contacto@rubenmate.com</span>
                <AiTwotoneMail />
            </a>
        </div>
    </section>
</Layout>
