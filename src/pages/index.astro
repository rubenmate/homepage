---
import { IoArrowForward, IoLogoGithub, IoLogoLinkedin } from "react-icons/io5/index"

import Layout from '../layouts/Layout.astro';
import AvatarImage from '../components/AvatarImage.astro';
import Skills from '../components/Skills.astro';
import Heading from '../components/Heading.astro';
import Button from "../components/Button.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="ruben-mate">
    <a rel="me" href="https://mas.to/@rubenmate" class="hidden">Mastodon</a>
    <div class="h-7" />

    <section class="w-11/12 mx-auto bg-primaryLight dark:bg-primaryDark rounded-md text-white
        dark:text-black text-center p-2">
        Hello, my name is 
        <code class="border border-white dark:border-black rounded-sm p-1">Rubén Maté</code>
        and I'm a front end developer from Spain
    </section>
    <div class="h-7" />

    <AvatarImage />
    <div class="h-7" />

    <section>
        <Heading title="Whoami" />
        <div class="h-5"/>
        <p class="w-11/12 mx-auto text-justify">
            I'm a last year student of Computer Science degree in Burgos University. I love 
            everything related to coding and learning new programming languages and frameworks but 
            I'm mostly learning web development.
            <br/><br/>
            My developer workflow revolves around the terminal and I have my own 
            <a
                href="https://github.com/rubenmate/dotfiles" target="_blank" 
                class="text-primaryLight dark:text-primaryDark hover:underline font-bold">Neovim config and dotfiles</a>{'.'}
            <br/>
            Thanks for stopping by!
        </p>
        <div class="flex justify-center ">
            <a href="/blog" class="my-2">
                <Button>
                    <span class="mr-2">Check my latest blog posts! </span><IoArrowForward />
                </Button>
            </a>
        </div>
    </section>
    <div class="h-7" />

    <Projects />

    <Skills />

    <section>
        <Heading title="Web presence" />
        <div class="h-3"/>
        <ul class="w-11/12 mx-auto flex flex-col md:flex-row md:space-x-6">
            <li>
                <a
                    href="https://github.com/rubenmate" target="_blank" 
                    class="w-1/2 md:w-full flex flex-row items-center md:text-lg text-primaryLight
                    dark:text-primaryDark hover:bg-primaryLight dark:hover:bg-primaryDark
                    p-2 hover:bg-opacity-10 dark:hover:bg-opacity-10 hover:rounded-md"
                >
                    <IoLogoGithub /><span class="ml-2">@rubenmate</span>
                </a>
            </li>
            <li>
                <a
                    href="https://www.linkedin.com/in/ruben-mate" target="_blank" 
                    class="w-1/2 md:w-full flex flex-row items-center md:text-lg text-primaryLight
                    dark:text-primaryDark hover:bg-primaryLight dark:hover:bg-primaryDark
                    p-2 hover:bg-opacity-10 dark:hover:bg-opacity-10 hover:rounded-md"
                >
                    <IoLogoLinkedin /><span class="ml-2">@ruben-mate</span>
                </a>
            </li>
        </ul>
    </section>
</Layout>
