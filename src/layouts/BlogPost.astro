---
import Layout from "./Layout.astro";
import { IoArrowBack } from "react-icons/io5/index";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		minutesRead?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage, minutesRead },
} = Astro.props as Props;
---

<Layout title={title}>
    {heroImage && (
        <img
            src={heroImage}
            alt=""
            class="md:w-[720px] md:h-[360px] mx-auto"
        />
    )}
    <section class="w-11/12 mx-auto">
        <h1 class="text-4xl text-primaryLight dark:text-primaryDark font-bold mt-5">{title}</h1>
        <p class="text-xl my-2">{description}</p>
        <div class="">{minutesRead}</div>
        <div class="flex mt-2">
            {pubDate && <time class="italic underline">{pubDate}</time>}
            <a href="/blog" class="ml-auto flex items-center space-x-1 text-primaryLight
                dark:text-primaryDark underline font-bold">
                <IoArrowBack /><div>Go back</div>
            </a>
        </div>
        {updatedDate && <div class="italic">Last updated on <time>{updatedDate}</time></div>}
    </section>
    <hr class="border-t border-solid border-['#DDD'] my-5"/>
    <section class="w-11/12 mx-auto text-lg prose dark:prose-invert prose-h1:text-primaryLight dark:prose-h1:text-primaryDark prose-h2:text-primaryLight dark:prose-h2:text-primaryDark prose-a:text-primaryLight hover:prose-a:text-violet-500
        dark:prose-a:text-primaryDark dark:hover:prose-a:text-orange-300">
        <slot />
    </section>
</Layout>
<style>
html {
    scroll-padding-top: 4rem;
}
section :global(iframe) {
    margin-left: auto;
    margin-right: auto;
    max-width: 100%;
  }
</style>
